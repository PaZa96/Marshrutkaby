        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationSet.MiddleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderTime)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id = item.IdRegistration, @class = "btn btn-order" })
        </td>
