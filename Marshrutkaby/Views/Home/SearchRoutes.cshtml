@model IEnumerable<Marshrutkaby.Models.DataRoutesSet>
@{
    ViewBag.Title = "Home Page";

}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<link href="@Url.Content("~/Content/jquery.datetimepicker.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/themes/base/datepicker.css")" rel="stylesheet" />
<div class="jumbotron">
    <div class="container-index">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#route" data-toggle="tab">Маршрут</a></li>
            <li><a href="#company" data-toggle="tab">Выбор перевозчика</a></li>
            <li class="disabled"><a href="#data" data-toggle="tab">Данные пасажиров</a></li>
            <li class="disabled"><a href="#confirmation" data-toggle="tab">Подтверждение заказа</a></li>
        </ul>
        <!-- Tab panes -->

        <div class="tab-content">
            <div class="tab-pane fade" id="route">
            </div>

            <div class="tab-pane fade in active" id="company">
                <div id="result" class="row ">
                    <table class="table table-bordered">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.RoutesSet.StartingPoint)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RoutesSet.EndPoint)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TimeSet.DepartureTime)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TimeSet.ArrivalTime)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TransportCompanySet.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th></th>
                        </tr>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoutesSet.StartingPoint)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoutesSet.EndPoint)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TimeSet.DepartureTime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TimeSet.ArrivalTime)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TransportCompanySet.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Заказать", "Order", new { id = item.IdDataRoute, @class = "btn btn-order" })

                                    </td>
                                </tr>
                            }
                        }

                    </table>
                    
                        @Html.ActionLink("Назад", "Index", new { id = "btnback" }, new {@class="btn btn-login"})
                   
                    
                </div>
            </div>
            <div class="tab-pane fade" id="data">
                
            </div>
            <div class="tab-pane fade" id="confirmation">...</div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @Scripts.Render("~/Scripts/moment-with-locales.min.js")
    @Scripts.Render("~/Scripts/bootstrap-datetimepicker.min.js")
    @Scripts.Render("~/Scripts/bootstrap-datetimepicker.ru.js")
    <script type="text/javascript">
   
$(function() {
    $('#myTab a[href="#company"]').tab('show')
   
});



    </script>
}