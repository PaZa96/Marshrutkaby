@model IEnumerable<Marshrutkaby.Models.RoutesSet>

@{
    ViewBag.Title = "Routes";
}

<h2>Routes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartingPoint)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndPoint)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Distance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Changes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StartingPoint)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndPoint)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Distance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Changes)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdRoute }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdRoute }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdRoute })
        </td>
    </tr>
}

</table>
